generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Diem {
  id          Int       @id @default(autoincrement())
  title       String    @db.VarChar(30)
  events      Event[]
  users       User[]    @relation(references: [id])
  date        String? //@default(now()) @db.Date
  chatHistory Message[] //TODO relation
  // created    DateTime  @default(now())
  // author      User @relation(fields:[authorId], references: [id])
  // authorId    Int
  map        String?
  color       String?
  //Message Message[]
}

//TODO
model Message {
  id        Int    @id @default(autoincrement())
  author    Int
  content   String
  //Diem    Diem?  @relation(fields: [diemId], references: [id])
  metaDiemId    Int?
  timestamp String
  metaDiem  Diem?  @relation(fields: [metaDiemId], references: [id])
}

model User {
  id          Int      @id @default(autoincrement())
  name        String   @db.VarChar(50)
  diems       Diem[]
  status      String?  @db.VarChar(255)
  userPhoto   String?
  email       String?
  phoneNumber String?
  friends     Friend[]

  //diems    Diem[]   @relation(references: [id])
}

model Friend {
  id       Int  @id @default(autoincrement())
  user     User @relation(fields: [friendId], references: [id])
  friendId Int
}

