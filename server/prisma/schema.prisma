model Event {
  id         Int     @id @default(autoincrement())
  metaDiem   Diem    @relation(fields: [metaDiemId], references: [id])
  metaDiemId Int
  address    String?
  photo      String?
  title      String
  time       String? //@db.Time(2)
  location   String?
  mapLink    String?
}

