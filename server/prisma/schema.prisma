generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//IMPLICIT M:N



model Diem {
  id         Int       @id @default(autoincrement())
  title      String    @db.VarChar(50)
  events     Event[]
  users      User[]   @relation(references: [id])
  date       DateTime @db.Date @default(now())
  // created    DateTime  @default(now())
  // author      User @relation(fields:[authorId], references: [id])
  // authorId    Int
}

model User {
  id        Int       @id @default(autoincrement())
  name      String    @db.VarChar(50)
  password  String    @db.VarChar(25) @default("password")
  // diems     Diem[]
  profile   Profile?
  diems     Diem[]  @relation(references: [id])
}

model Profile {
  id        Int     @id @default(autoincrement())
  status    String? @db.VarChar(255)
  user      User    @relation(fields: [userId], references: [id])
  userId    Int     @unique
  userPhoto String?
}

model Event {
  id        Int     @id @default(autoincrement())
  metaDiem  Diem @relation(fields: [metaDiemId], references: [id])
  metaDiemId Int
  address   String?
  photo     String?
  title     String
  time      String? //@db.Time(2)
  location  String?
  mapLink   String?
}




